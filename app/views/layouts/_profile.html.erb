
<%= form_for(@profile) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>
  <div class="form-group">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>
  <div class="form-group">
    <%= f.label :weight %>
    <%= f.number_field :weight %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.label :picture %>
    <%= f.text_field :picture %>
  </div>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
