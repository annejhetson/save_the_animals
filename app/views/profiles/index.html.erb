<h1>Profiles#index</h1>
   <ul>
      <% @profiles.each do |profile| %>
        <div class="small-3 large-3 columns">
          <a class="th" href="/profiles/<%= profile.id %>"><img src="<%= profile.picture %>"></a><br><%= link_to "#{profile.name}", profile_path(profile), :class=> "btn btn-default" %>
        </div>
      <% end %>
   </ul>

<%= link_to "Add a New profile", new_profile_path, :class=> "btn btn-default" %>

